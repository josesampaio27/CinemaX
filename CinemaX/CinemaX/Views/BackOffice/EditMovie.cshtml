@model CinemaX.Models.Filme

@{
    ViewData["Title"] = "Edit";
}

<div class="mydiv">
    <h1> <i> <font face="Bebas Neue" color="black">EDITAR FILME</font></i></h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditMovie" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdFilme" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <input asp-for="Foto" type="file" class="form-control" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Realizador" class="control-label"></label>
                    <input asp-for="Realizador" class="form-control" />
                    <span asp-validation-for="Realizador" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkTrailer" class="control-label"></label>
                    <input asp-for="LinkTrailer" class="form-control" />
                    <span asp-validation-for="LinkTrailer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descrição" class="control-label"></label>
                    <input asp-for="Descrição" class="form-control" />
                    <span asp-validation-for="Descrição" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duracao" class="control-label"></label>
                    <input asp-for="Duracao" class="form-control" />
                    <span asp-validation-for="Duracao" class="text-danger"></span>
                </div>
                <div>
                    <label>Categorias:</label>
                    <ul>
                        @{string Categoria = null;}
                        @foreach (Categorium categorias in ViewBag.Categorias)
                        {
                            foreach (CategoriasFilme cat in Model.CategoriasFilmes)
                            {
                                if (cat.IdCategoria == categorias.IdCategoria)
                                    Categoria = "exists";
                            }

                            if (Categoria != null)
                            {
                                <li><input type="checkbox" name="IdCategorias" checked value="@categorias.IdCategoria"> @categorias.Nome</li>
                            }
                            else
                            {
                                <li><input type="checkbox" name="IdCategorias" value="@categorias.IdCategoria"> @categorias.Nome</li>
                            }

                            Categoria = null;
                        }
                    </ul>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
    <div>
        <a style="color:black;" asp-action="FilmList">Voltar</a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
