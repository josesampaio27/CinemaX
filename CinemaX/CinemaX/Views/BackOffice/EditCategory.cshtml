@model CinemaX.Models.Categorium

<form asp-action="EditCategory" data-ajax="true" data-ajax-method="post"
      data-ajax-update="#Col_@Model.IdCategoria" data-ajax-mode="replace">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="IdCategoria" />  

    <div class="form-group" style="text-align:center;">
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    
        <input type="submit" value="Guardar" class="btn btn-primary" style="margin-top:5px;" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

