@model IEnumerable<CinemaX.Models.Sala>

<table class="table" id="Tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidade)
            </th>
            <th>
                Adicionado por
            </th>
            <th>
                Data adicionada
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td id="Col_@item.Numero">
                    @Html.DisplayFor(modelItem => item.Capacidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCreationUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAdicionada)
                </td>
                <td>
                    <a asp-action="EditRoom" asp-route-id="@item.Numero" class="btn btn-primary"
                       data-ajax="true" data-ajax-method="get"
                       data-ajax-mode="replace" data-ajax-update="#Col_@item.Numero">Editar</a>
                </td>
                <td>
                    <a asp-action="DeleteRoom" asp-route-id="@item.Numero" class="btn btn-danger" style="margin-left:10px;" data-ajax="true" data-ajax-method="get"
                       data-ajax-mode="replace" data-ajax-update="#Tabela" data-ajax-confirm="Tem a certeza?">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>