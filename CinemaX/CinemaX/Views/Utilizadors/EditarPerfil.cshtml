@model CinemaX.Models.Perfil

@{
    ViewData["Title"] = "EditarPerfil";
}

<h1> <i> <font face="Bebas Neue" color="black">EDITAR PERFIL</font></i>  </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarPerfil">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Utilizador</label>
                <input asp-for="IdUtilizadorNavigation.UserName" class="form-control" />
                <span asp-validation-for="IdUtilizadorNavigation.UserName" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label>Password*</label>
                <br />
                <a asp-action="ChangePassword" asp-route-id="@Model.IdUtilizador" class="btn btn-primary" style="color:white;">Alterar</a>
                <br>
                <label style="font-size:smaller">*Irá receber um email para proceder com a alteração e não puderá utilizar a conta enquanto não finalizar a alteração.</label>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Data de nascimento</label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdUtilizador" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="Telemovel" class="control-label">Telémovel</label>
                <input asp-for="Telemovel" class="form-control" />
                <span asp-validation-for="Telemovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Perfil" asp-route-id="@Model.IdUtilizador">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
