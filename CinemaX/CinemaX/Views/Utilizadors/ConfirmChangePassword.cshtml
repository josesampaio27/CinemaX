@model CinemaX.Models.Utilizador

@{
    ViewData["Title"] = "Alterar Password";
}

<h1>Alterar Password</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="UserPassWord" class="form-control" />
                <span asp-validation-for="UserPassWord" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdUtilizador" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="IdGrupo" />
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" >Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
