@model CinemaX.Models.Sessao

@{
    ViewData["Title"] = "ComprarBilhete";
}

<i><font face="Bebas Neue" size="400" color="black">COMPRAR BILHETE</font></i>

<div class="mydiv">
    <i><font face="Bebas Neue" size="400" color="black">@Html.DisplayFor(model => model.IdFilmeNavigation.Nome)</font></i>
    <hr />
    <dl class="row">
        <dd class="col-sm-2">
            <i><font face="Bebas Neue" size="5" color="black">DATA</font></i>
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dd class="col-sm-2">
            <i><font face="Bebas Neue" size="5" color="black">PREÇO</font></i>
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preço)€
        </dd>
        <dd class="col-sm-2">
            <i><font face="Bebas Neue" size="5" color="black">VAGAS</font></i>
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vagas)
        </dd>
        <dd class="col-sm-2">
            <i><font face="Bebas Neue" size="5" color="black">SALA</font></i>
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdSalaNavigation.Numero)
        </dd>
    </dl>
    <form asp-action="Comprar" asp-route-id="@Model.IdSessao">
        <i><font face="Bebas Neue" size="5" color="black">QUANTIDADE</font></i>
        <br />
        <input type="number" name="numero" value="1" style="width: 92px;" />
        <input type="submit" class="btn btn-primary" style="background-color: green; margin-left: 10px;" value="Comprar" />
        <a asp-action="Details" class="btn btn-danger" asp-route-id="@Model.IdFilme" style="margin-left:10px;">Cancelar</a>
    </form>
</div>

