@model CinemaX.Models.Sessao

@{
    ViewData["Title"] = "ComprarBilhete";
}

<h1>ComprarBilhete</h1>

<div class="mydiv">
    <h4>Sessao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preço)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preço)€
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vagas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vagas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdFilmeNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFilmeNavigation.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdSalaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdSalaNavigation.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vagas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vagas)
        </dd>
    </dl>
    <form asp-action="Comprar" asp-route-id="@Model.IdSessao">
        <label style="font-weight:bold;">Quantidade:</label>
        <br />
        <input type="number" name="numero" value="1" style="width: 92px;"/>
        <input type="submit" class="btn btn-primary" style="background-color: green; margin-left: 10px;" value="Comprar"/>
        <a asp-action="Details" class="btn btn-danger" asp-route-id="@Model.IdFilme" style="margin-left:10px;">Cancelar</a>
    </form>
</div>

